<section class="section {{inject.pageSectionClass}}">
	<div class="section__inner layout__wrap {{inject.sectionInnerClass}}">
		{% if inject.title %}
			<div class="section__title title">

				<div class="title__main{{ ' title__main_alt' if inject.titleView === 'alt'}}">{{inject.title}}</div>
				<div class="title__deco{{ ' title__deco_alt' if inject.titleView === 'alt'}}"></div>
			</div>
		{% endif %}

		{% block content %}{% endblock %}
	</div>
</section>